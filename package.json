{
  "name": "mmm--messenger",
  "version": "1.0.0",
  "description": "messenger: react, nodejs, express, mongoose",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "server": "nodemon app.js",
    "client": "npm run start --prefix client",
		"dev": "concurrently \"npm run server\" \"npm run client\"",
		"dev-heroku": "concurrently --kill-others \"heroku local\" \"npm run start --prefix ./client\"",
    "postinstall": "npm install && npm install --prefix ./client && npm run build --prefix ./client"
  },
  "keywords": [
    "react",
    "nodejs",
    "express",
    "mongoose"
  ],
  "author": "Andrey Ivanov <ivanov17andrey@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "config": "^3.3.1",
    "express": "^4.17.1",
    "express-validator": "^6.6.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.2",
    "socket.io": "^2.3.0",
    "socketio-jwt": "^4.6.2"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.4"
  }
}
